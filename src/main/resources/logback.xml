<configuration>
	<shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%-5level] %mdc{AWSRequestId:-NO REQUEST_ID} %logger - %message%n</pattern>
		</encoder>
	</appender>

	<logger name="uk.bot_by.monoratebot" level="${BOT_LOG_LEVEL:-INFO}"/>

	<root level="WARN">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>